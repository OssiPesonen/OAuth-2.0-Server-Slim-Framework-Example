{
    "name": "ossipesonen/oauth-2.0-server-slim-framework-example",
    "description": "A working (and opinionated) example repository containing OAuth 2.0 server on Slim Framework, using a MySQL database",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "ossi.pesonen",
            "email": "ossi@ossipesonen.fi",
            "homepage": "https://ossi.dev"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "doctrine/dbal": "^2.10",
        "league/oauth2-server": "^8.0",
        "monolog/monolog": "^1.24",
        "php-di/php-di": "^6.0",
        "slim/psr7": "^0.5",
        "slim/slim": "^4.1",
        "vlucas/phpdotenv": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}